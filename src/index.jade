block vars
  - var bodyClass = 'homepage';

extends _layouts/base

include _modules/link/link
include _modules/card/card
include _modules/popover/popover


block content
  section#welcome.welcome.container
    .welcome-blurb
      h1 Hi, my name is #[span Chris Zamierowski]
      h2.things-i-am
        span I'm a&nbsp;
        ul
          li developer
          li designer
          li thinker
          li carnivore
  section#expertise.expertise.container
    h2 Expertise
    .t-bone-shaped-skills
      img(src='/images/graphics/t-bone.svg')
      each p in site.data.expertise.popovers
        +popover(p)
  section#examples.examples.container
    h2 Examples
    .cards
      each c in site.data.projects.summaries 
        +card(c)
  section#resume.container
    h2 Resume
    h5 Northwestern Grad, Iâ€™ve worked for agencies, startups and as a freelancer.
    h6 Here are some tools I like to use:
    p Check out my #[+link({text: 'full resume'})(href = '/resume')] for a more detailed list of tools and experience