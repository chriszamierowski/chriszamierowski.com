block vars
  - var bodyClass = 'homepage';

extends _layouts/base

include _modules/card/card
include _modules/popover/popover


block content
  section#welcome.welcome.container
    .welcome-blurb
      h1= site.data.homepage.welcome.blurb.intro
        span= site.data.homepage.welcome.blurb.name
      h2.things-i-am
        span!= site.data.homepage.welcome.things_i_am.copy
        ul
          each l in site.data.homepage.welcome.things_i_am.list
            li= l
      .scroll-down
        a(href='#skills')= site.data.homepage.welcome.scroll
  section#skills.skills.container
    h2
      span= site.data.homepage.skills.subtitle
      = site.data.homepage.skills.title
    .t-bone-shaped-skills
      img(src='/images/graphics/t-bone.svg')
      each p in site.data.expertise.popovers
        +popover(p)
  section#examples.examples.container
    h2
      span= site.data.homepage.examples.subtitle
      = site.data.homepage.examples.title
    .cards
      each c in site.data.projects.summaries 
        +card(c)
  section#resume.resume
    .container-sm
      h2
        span= site.data.resume.summary.subtitle
        = site.data.resume.summary.title
      h5= site.data.resume.summary.blurb
      p= site.data.resume.summary.blurb_tools
      ul
        each t in site.data.resume.summary.tools
          li
            +link({text: t.name})(href = t.link, target = '_blank')
              i(class='sprite sprite-#{t.class}')
      p !{site.data.resume.summary.more}