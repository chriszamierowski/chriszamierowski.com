section#contact.contact
  .container
    if site.data.contact.availability.status
      h2
        span= site.data.contact.availability.copy
        = site.data.contact.title
    div.text-center
      a.btn(href='mailto:#{site.data.contact.email}')= site.data.contact.button
    .social-links: ul
      each s in site.data.social.links
        li
          a(class='social-#{s.class}', href='#{s.link}', target='_blank')
            i(class='icon-#{s.class}')
            span.sr-only= s.name