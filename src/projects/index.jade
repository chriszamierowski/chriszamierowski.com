extends ../_layouts/base

include ../_modules/card/card
include ../_modules/project-header/project-header

block vars
  - var baseUrl = '../'
  - var bodyClass = 'projects-page';

block header
  +project-header

block content
  section.container
    h2.text-center.section-title
      span= site.data.projects.subtitle
      = site.data.projects.title
    .cards
      each c in site.data.projects.list
        if (!c.disabled)
          +card(c)